{
  "manifest_version": 3,

  "name": "Miniblox Texture Pack",
  "version": "1.0.0",
  "description": "A Chrome extension that replaces the Miniblox spritesheet with a custom texture pack for educational purposes.",

  "icons": {
    "128": "icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://miniblox.io/*",
        "https://miniblox.online/*",
        "https://miniblox.org/*"
      ],
      "js": ["inject.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["spritesheet.png"],
      "matches": [
        "https://miniblox.io/*",
        "https://miniblox.online/*",
        "https://miniblox.org/*"
      ]
    }
  ],

  "permissions": [],
  "host_permissions": [
    "https://miniblox.io/*",
    "https://miniblox.online/*",
    "https://miniblox.org/*"
  ]
}
